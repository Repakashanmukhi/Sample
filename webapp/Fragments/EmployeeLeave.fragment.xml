<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <Dialog id="LeaveInfo" title="Employee Leave Details">
          <Table id="leave" items="{/leaves}">
            <columns>
                <Column>
                    <Text text="Leave Start Date"/>
                </Column>
                <Column>
                    <Text text="Leave End Date"/>
                </Column>
                <Column>
                    <Text text="Leave Type"/>
                </Column>
                <Column>
                    <Text text="Reason"/>
                </Column>
                <Column>
                    <Text text="Status"/>
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{LeaveStartDate}"/>
                        <Text text="{LeaveEndDate}"/>
                        <Text text="{LeaveType}"/>
                        <Text text="{Reason}"/>
                        <Text text="{Status}"/>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Close" press="sample.controller.Test1.onCancleDialog"/>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
