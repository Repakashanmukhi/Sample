            <Bar>
                <contentLeft>
                    <Text id="Text"/>
                </contentLeft>
                <contentRight>
                    <Button press="Busy" text="Busy Dialog"></Button>  
                </contentRight>
            </Bar>
        </subHeader>
       <List id="employeeList" items="{/event}"> 
        <items> 
            <StandardListItem 
                title="{FirstName} {LastName}" 
                description="{Email}"  
                type="Active" 
                press="OnNavigate"> 
            </StandardListItem> 
        </items> 
    </List> 
      

