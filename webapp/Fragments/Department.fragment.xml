<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="Department" title="Select Department">
        <VBox class="sapUiSmallMargin">
            <List id="Departments" items="{departmentModel>/}" itemPress="onDepartment">
                <items>
                    <StandardListItem title="{departmentModel>Department}" type="Active" />
                </items>
            </List>
        </VBox>
        <endButton>
            <Button text="Cancel" press="onCloseDialog"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
